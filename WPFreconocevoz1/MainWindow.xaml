        <ListBox x:Name="lB1" HorizontalAlignment="Left" Height="227" Margin="45,200,0,0" VerticalAlignment="Top" Width="138" Background="#FFD7F5EC" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
